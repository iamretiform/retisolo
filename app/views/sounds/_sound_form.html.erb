<%= form_for @sound, remote: true, authenticity_token: true do |f| %>
  <%= f.label :artist_name %>:
  <%= f.text_field :artist_name, class: "form-control", data: {textfield: "artist_name"} %>
  <%= f.label :title %>:
  <%= f.text_area :title, class: "form-control", data: {textarea: "title"} %>
  <%= f.hidden_field :location_id, value: :location_id %>
  <%= f.hidden_field :user_id, value: :user_id %>
  <%= f.submit "send", class: "btn btn-primary", style: "display: none", data: {send: "sound"} %>
<% end %>